{
  "extends": [
    "config:base"
  ],
  "labels": ["dependencies", "no milestone"],
  "packageRules": [
    {
      "matchManagers": ["maven"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": false,
      "rebaseWhen": "auto"
    },
    {
      "description": "skip any release actions on main for auto-dep merges",
      "matchBaseBranches": ["/main/", "/^release/.*/"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "commitBody": "[skip ci]"
    },
    {
      "matchManagers": ["github-actions"],
      "automerge": false
    },
    {
      "matchBaseBranches": ["/^release/.*/"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    },
    {
      "matchPackagePrefixes": ["io.camunda.connector"],
      "enabled": false
    },
    {
      "matchManagers": ["maven"],
      "description" : "Exclude SNAPSHOT versions, renovate may suggest them for pre-release values.",
      "matchPackagePatterns": [".*"],
      "allowedVersions": "!/-SNAPSHOT$/"
    }
  ],
  "baseBranches": ["main", "release/8.5", "release/8.6"]
}